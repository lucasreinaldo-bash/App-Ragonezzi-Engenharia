<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_grey_100"
    android:orientation="vertical"
    tools:context="Orcamento.Ajustes">

    <Button
        android:id="@+id/btnAjustar"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:background="@drawable/ferramenta"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="362dp"
            android:layout_margin="10dp"
            android:background="@drawable/side_nav_bar"
            android:padding="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <LinearLayout
                android:id="@+id/linear_ajustes_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="ART"
                    android:textColor="#9CAFB8"
                    android:textSize="40sp" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ar-Condicionado R$" />

                                <EditText
                                    android:id="@+id/AjustesArcondicionado"
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Envidracamento R$" />

                                <EditText
                                    android:id="@+id/AjustesEnvidracamento"
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pedras de Marmore R$" />

                                <EditText
                                    android:id="@+id/AjustesPedraMarmore"
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Novos Revestimentos R$" />

                                <EditText
                                    android:id="@+id/AjustesRevestimentos"
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Elétrica R$" />

                                <EditText
                                    android:id="@+id/AjustesEletrica"
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hidráulica R$" />

                                <EditText
                                    android:id="@+id/AjustesHidraulica"
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Box R$" />

                                <EditText
                                    android:id="@+id/AjustesBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gesso R$" />

                                <EditText
                                    android:id="@+id/AjustesGesso"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Demoliçao de P.  Não Estrutural" />

                                <EditText
                                    android:id="@+id/AjustesDemolicaoNestrutural"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Móveis Planejados R$" />

                                <EditText
                                    android:id="@+id/AjustesMoveisPlanejados"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deslocamento Ponto de Gás R$" />

                                <EditText
                                    android:id="@+id/AjustesDeslocamentoGas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="50.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Taxa do CREA" />

                                <EditText
                                    android:id="@+id/AjustesCrea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="50.00" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </ScrollView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_atualizar"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_ajustes"
            android:fontFamily="@font/roboto_light"
            android:text="Atualizar Valores" />

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_ajustes"
            android:fontFamily="@font/roboto_light"
            android:text="Voltar" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"

            android:elevation="50dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <Button
                android:id="@+id/btnART"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_art" />

            <Button
                android:id="@+id/btnDemolicao"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_demolicao" />

            <Button
                android:id="@+id/btnRevestimento"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_revestimento" />

            <Button
                android:id="@+id/btnHidraulica"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_hidraulica" />

            <Button
                android:id="@+id/btnPintura"
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@drawable/icon_pintura" />


        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>